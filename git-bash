#!/bin/bash

# Create project directory
mkdir jm-consultancy && cd jm-consultancy

# Initialize Next.js project
npx create-next-app@latest . --use-npm --typescript --eslint --tailwind --app --no-src --import-alias "@/"

# Install additional dependencies
npm install framer-motion react-google-recaptcha sonner

# Create UI Components
mkdir -p components/ui
cat <<EOF > components/ui/button.js
export const Button = ({ children, className = "", ...props }) => (
  <button
    className={\`bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition \${className}\`}
    {...props}
  >
    {children}
  </button>
);
EOF

cat <<EOF > components/ui/card.js
export const Card = ({ children }) => (
  <div className="bg-white rounded-2xl shadow-md p-6">{children}</div>
);

export const CardContent = ({ children, className = "" }) => (
  <div className={className}>{children}</div>
);
EOF

# Create .env.local placeholder
cat <<EOF > .env.local
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
EOF

# Create Main Page
mkdir -p pages
cat <<EOF > pages/index.js
// Full index.js code will be inserted here (I'll provide it in the next message)
EOF

echo "ðŸŽ‰ JM Consultancy Project Created Successfully!"
echo "ðŸ‘‰ Don't forget to update .env.local with your real reCAPTCHA site key."
